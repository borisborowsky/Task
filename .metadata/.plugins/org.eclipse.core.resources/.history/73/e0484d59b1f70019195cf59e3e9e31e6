package com.company.app.data;

import java.util.Date;

public class BookPojoToJson {
	private String title;
	private String type;
	private String subject;
	private String authour;
	private Date publishDate;
	private double borrowPrice;
	private Date borrowDate;
	private Date returnDate;
	private String bookStatus;
	
	BookPojoToJson(String title, String type, String subject, String authour,
			Date publishDate, double borrowPrice, Date borrowDate, Date returnDate,
			String bookStatus) {
		this.title = title;
		this.type = type;
		this.subject = subject;
		this.authour = authour;
		this.publishDate = publishDate;
		this.borrowPrice = borrowPrice;
		this.borrowDate = borrowDate;
		this.returnDate = returnDate;
		this.bookStatus = bookStatus;
	}
	
	@Override
	public String toString() {
		return "{ \r\n" + 
				"	   \"title\":\"" + title + "\"" + ",\r\n" + 
				"	   \"type\":\"" + type + "\"" + ",\r\n" + 
				"	   \"subject\":\"" + subject + "\"" + ",\r\n" + 
				"	   \"authour\":\"" + authour + "\"" + ",\r\n" + 
				"	   \"publishDate\":" + "\"" + publishDate + "\"" + ",\r\n" + 
				"	   \"borrowPrice\":" + "\"" + borrowPrice + "\"" + ",\r\n" + 
				"	   \"borrowDate\":" + "\"" + borrowDate + "\"" + ",\r\n" + 
				"	   \"returnDate\":" +  "\"" + returnDate + "\"" + ",\r\n" + 
				"	   \"bookStatus\":" + "\"" + bookStatus + "\"" + "\r\n" + 
				"}";
	}
	
	
}

